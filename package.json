{
  "name": "customer-management",
  "private": true,
  "version": "0.2.0",
  "description": "Customer Management System with Django backend and React frontend",
  "workspaces": [
    "frontend",
    "e2e-tests"
  ],
  "scripts": {
    "dev:frontend": "pnpm --filter frontend dev",
    "build:frontend": "pnpm --filter frontend build",
    "test:frontend": "pnpm --filter frontend test",
    "lint:frontend": "pnpm --filter frontend lint",
    "dev:e2e": "pnpm --filter e2e-tests dev",
    "test:e2e": "pnpm --filter e2e-tests test",
    "test:all": "cd tests && ./run-tests.sh all",
    "test:backend": "cd tests && ./run-tests.sh backend",
    "test:unit": "cd tests && ./run-tests.sh backend && cd tests && ./run-tests.sh frontend",
    "test:integration": "cd tests && ./run-tests.sh e2e",
    "prepare": "husky install",
    "commitlint": "commitlint --edit"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "husky": "^8.0.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/crashtechie/django-react.git"
  }
}